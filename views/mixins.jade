//- Declaration
mixin list
	ul1
		li foo
		li bar
		li baz
//- Use
+list
+list

mixin pet(name)
	li.pet= name
ul2
	+pet("cat")
	+pet("dog")
	+pet("pig")

mixin list2(id, ...items)
	ul3(id=id)
		each item in items
			li= item

+list2("my-list", 1, 2, 3, 4)


mixin link(href, name)
	//- attributes == {class: "btn"}
	a(class!=attributes.class, href=href)= name

+link("/foo", "foo")(class="btn")

mixin article(title)
	.article
		.article-wrapper
			h1= title
			if block
				block
			else
				p No content provided

+article("Hello world")

+article("Hello world")
	p This is my
	p Amazing article
